{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts"
  ],
  "compilerOptions": {
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "lib": [
      "ESNext"
    ],
    "listEmittedFiles": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "outDir": "build",
    "pretty": true,
    "target": "ES2016"
  },
  "typedocOptions": {
    "excludeExternals":true,
    "excludeNotExported":true,
    "excludePrivate":true,
    "excludeProtected":true,
    "entryPoint":"PathNotation",
    "hideGenerator":true,
    "mode": "file",
    "out": "docs",
    "readme":"none",
    "theme":"markdown",
    "hideBreadcrumbs":true,
    "hideSources":true
  }
}